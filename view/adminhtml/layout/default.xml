<?xml version='1.0'?>
<page 
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:framework:View/Layout/etc/page_configuration.xsd'>
	<head>
		<!--
			2015-09-02
			На текущий момент ядро никак не использует возможность defer,
			но она прекрасно работает:
			выполнение нашего скрипта замораживается до окончания загрузки страницы.
            http://www.w3schools.com/tags/att_script_defer.asp
		-->
		<script src='Dfe_Google::main.js' defer='defer'/>
		<css src='Dfe_Google::main.css'/>
	</head>
	<body>
		<referenceContainer name='root'>
			<block
				class='Dfe\Google\Block\Backend\Metadata'
				name='Dfe_Google_Block_Backend_Metadata'
				ifconfig='dfe_google/login/enable'
			/>
		</referenceContainer>
	</body>
</page>