<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../../Magento/Config/etc/system_file.xsd'
>
    <system>
        <!--
            2015-07-10
            Минимальная длина идентификатора tab — 3 символа:
            https://github.com/magento/magento2/blob/1.0.0-beta/app/code/Magento/Config/etc/system_file.xsd#L405
            Поэтому ставим символ подчёркивания вначале.
        -->
        <tab id='_df' translate='label' sortOrder='-100'>
            <label>Mage2.PRO</label>
        </tab>
        <section
            id='dfe_login'
            translate='label'
            type='text'
            sortOrder='100'
            showInDefault='1'
            showInWebsite='1'
            showInStore='1'
        >
            <tab>_df</tab>
            <label>Login</label>
            <class>separator-top</class>
            <resource>Dfe_Login::config</resource>
            <group
                id='google'
                translate='label'
                type='text'
                sortOrder='100'
                showInDefault='1'
                showInWebsite='1'
                showInStore='1'
            >
                <label>Google OAuth 2.0</label>
                <field
                    id='enable'
                    translate='label'
                    type='select'
                    sortOrder='1'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='1'
                >
                    <label>Enable?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[]]></comment>
                </field>
                <field
                    id='client_id'
                    translate='label'
                    type='text'
                    sortOrder='2'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='1'
                >
                    <label>Client ID</label>
                    <comment><![CDATA[<a href="https://developers.google.com/console/help/#generatingoauth2">how to get it?</a>]]></comment>
                    <depends><field id='enable'>1</field></depends>
                </field>
            </group>
        </section>
    </system>
</config>